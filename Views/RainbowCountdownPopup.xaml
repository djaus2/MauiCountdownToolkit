<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="MauiCountdownToolkit.Views.RainbowCountdownPopup"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Color="Transparent">
    <!-- Important for rounded corners -->
    <toolkit:Popup.Resources>
        <Style x:Key="PopupBorderStyle" TargetType="Border">
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="StrokeShape">
                <RoundRectangle CornerRadius="16" />
            </Setter>
        </Style>
    </toolkit:Popup.Resources>

    <Border x:Name="OuterBorder" Stroke="Red" HorizontalOptions="Fill" VerticalOptions="Fill"  Style="{StaticResource PopupBorderStyle}" WidthRequest="240" HeightRequest="240">
        <Border Stroke="Yellow" HorizontalOptions="Fill" VerticalOptions="Fill"  Style="{StaticResource PopupBorderStyle}">
            <Border Stroke="Orange" HorizontalOptions="Fill" VerticalOptions="Fill"  Style="{StaticResource PopupBorderStyle}">
                <Border Stroke="Green" HorizontalOptions="Fill" VerticalOptions="Fill"  Style="{StaticResource PopupBorderStyle}">
                    <Border Stroke="Blue" HorizontalOptions="Fill" VerticalOptions="Fill"  Style="{StaticResource PopupBorderStyle}">
                        <Border Stroke="Indigo" HorizontalOptions="Fill" VerticalOptions="Fill"  Style="{StaticResource PopupBorderStyle}">
                            <Border Stroke="Violet" HorizontalOptions="Fill" VerticalOptions="Fill"  Style="{StaticResource PopupBorderStyle}">
                                <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">

                                    <Image x:Name="PopupIcon"
                                       Source="videogreen.svg"
                                       WidthRequest="100"
                                       HeightRequest="100"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Aspect="AspectFit" />

                                    <Label x:Name="CountdownLabel"
                                       Text="Starting..."
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       LineBreakMode="NoWrap" />

                                    <Button x:Name="CancelButton"
                                        Text="Cancel"
                                        Clicked="OnCancelClicked"
                                        BackgroundColor="#e74c3c"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="100"
                                        HorizontalOptions="Center" />

                                </VerticalStackLayout>

                            </Border>
                        </Border>
                    </Border>
                </Border>
            </Border>
        </Border>
    </Border>
</toolkit:Popup>




